<?xml version="1.0" encoding="UTF-8"?>
<project
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd"
	xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
	<modelVersion>4.0.0</modelVersion>
	<parent>
		<groupId>org.araqne</groupId>
		<artifactId>araqne-oswrapper-pom</artifactId>
		<version>1.0.0</version>
	</parent>
	<artifactId>araqne-winapi</artifactId>
	<version>1.0.1</version>
	<packaging>bundle</packaging>
	<name>Araqne WinApi</name>
	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.felix</groupId>
				<artifactId>maven-bundle-plugin</artifactId>
				<extensions>true</extensions>
				<configuration>
					<instructions>
						<Bundle-SymbolicName>org.araqne.winapi</Bundle-SymbolicName>
						<Bundle-NativeCode>
							lib/win32_x86/winapi.dll;osname=win32;osname="windows server
							2008";processor=x86,
							lib/win32_x86_64/winapi.dll;osname=win32;
							osname="windows server 2008";processor=x86_64
						</Bundle-NativeCode>
						<Export-Package>org.araqne.winapi;version=${project.version}</Export-Package>
						<Private-Package>org.araqne.winapi.impl</Private-Package>
						<Import-Package>*</Import-Package>
					</instructions>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.apache.felix</groupId>
				<artifactId>maven-ipojo-plugin</artifactId>
				<executions>
					<execution>
						<goals>
							<goal>ipojo-bundle</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>
	<dependencies>
		<dependency>
			<groupId>junit</groupId>
			<artifactId>junit</artifactId>
			<scope>test</scope>
		</dependency>
	</dependencies>
</project>
